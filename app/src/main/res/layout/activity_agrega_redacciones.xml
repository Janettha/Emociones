<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgDialogs"
    tools:context=".EmocionesVo.AgregaRedacciones">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:text="Agregue un nuevo relato el cual será agregado en la segunda actividad."
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toTopOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:hint="Redacción"
        android:textColorHint="@color/colorPrimaryTxt"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <ScrollView
                android:id="@+id/addredacciones_emocion1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight=".5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:background="@drawable/f0"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="12dp"
                android:hint="Explicación emoción 1"
                android:textColorHint="@color/colorPrimaryTxt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">


            <ScrollView
                android:id="@+id/addredacciones_emocion2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight=".5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:background="@drawable/f0"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textSize="12dp"
                android:hint="Explicación emoción 2"
                android:gravity="center"
                android:textColorHint="@color/colorPrimaryTxt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">


            <ScrollView
                android:id="@+id/addredacciones_emocion3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight=".5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:background="@drawable/f0"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="12dp"
                android:hint="Explicación emoción 3"
                android:textColorHint="@color/colorPrimaryTxt"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>