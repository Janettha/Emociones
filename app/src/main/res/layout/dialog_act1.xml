<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/LLDialogA1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/BackgDialogs"
    >
    <TextView
        android:id="@+id/nameRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMOCION"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="@color/colorTxt"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/Explicacion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Â¿PREGUNTA?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/dialogText"
        android:textColor="@color/colorTxt"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_margin"
        android:layout_below="@id/nameRespuesta"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgRespuesta"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Regresar"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_margin"
        android:background="#ffd53b"
        />

</LinearLayout>